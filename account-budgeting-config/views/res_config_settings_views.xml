<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
              <xpath expr="//div[@id='send_default']" position="after">
                    <h2>Account Budgeting</h2>
                     
                        <div class="row mt16 o_settings_container">                         
                            <div class="col-12 col-lg-6 o_setting_box">
                              <div class="col-12 o_setting_box">  
                              <div class="o_setting_left_pane">
                                <field name="module_account_budget_oca" class="oe_inline" />
                              </div>
                              <div class="o_setting_right_pane">                                    
                                    <label for="module_account_budget_oca"/> 
                                    <div class="text-muted">
                                         Install / Unistall Module 
                                    </div>                               
                              </div>                            
                            </div>                          
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                               <div class="col-12 o_setting_box">                           
                                <div class="o_setting_left_pane">
                                    <field name="module_account_budget_template" class="oe_inline" />
                                </div>
                               
                                <div class="o_setting_right_pane">                                    
                                    <label for="module_account_budget_template" />
                                    <div class="text-muted">
                                         Install / Unistall Module 
                                    </div>                               
                                </div> 
                               </div>                      
                            </div>                            
                          </div>                                                  
                                     
                </xpath>
            </field>
        </record>
    </data>
</odoo>


                